{
  "name": "root",
  "private": true,
  "workspaces": [
    "src/frontend",
    "src/api",
    "src/cdk"
  ],
  "scripts": {
    "// dev": "================= DEV =================",
    "dev:frontend": "npm -w src/frontend run dev",
    "dev:api": "npm -w src/api run dev",
    "dev": "concurrently -k -n FRONTEND,API \"npm -w src/frontend run dev\" \"npm -w src/api run dev\"",
    "// build": "=============== BUILD ================",
    "build:frontend": "npm -w src/frontend run build",
    "build:api": "npm -w src/api run build",
    "build": "npm -w src/frontend run build && npm -w src/api run build",
    "// quality": "============= QUALITY ===============",
    "format": "prettier -w .",
    "lint": "eslint . --ext .ts,.tsx",
    "test:frontend": "npm -w src/frontend run test",
    "test:api": "npm -w src/api run test",
    "test": "npm -w src/api run test && npm -w src/frontend run test",
    "// start": "=============== START ===============",
    "start": "concurrently -k -n FRONTEND,API \"npm -w src/frontend run dev\" \"npm -w src/api run dev\"",
    "// cdk": "================= CDK =================",
    "bootstrap": "npm -w src/cdk run cdk:bootstrap",
    "synth": "npm -w src/cdk run cdk:synth",
    "diff": "npm -w src/cdk run cdk:diff",
    "deploy": "npm -w src/cdk run cdk:deploy",
    "destroy": "npm -w src/cdk run cdk:destroy",
    "// misc": "=============== MISC =================",
    "clean": "rimraf node_modules src/**/node_modules src/cdk/cdk.out || true"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.0",
    "rimraf": "^6.0.1"
  }
}
